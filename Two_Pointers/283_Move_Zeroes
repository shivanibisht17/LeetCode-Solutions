#include <iostream>
#include <vector>
#include <algorithm>

using namespace std;

// LeetCode 283 - Move Zeroes
// Approach: Two Pointers
// Time Complexity: O(n)
// Space Complexity: O(1)

class Solution {
public:
    void moveZeroes(vector<int>& nums) {
        int j = 0; // pointer for placing non-zero elements

        for (int i = 0; i < nums.size(); i++) {
            if (nums[i] != 0) {
                swap(nums[i], nums[j]);
                j++;
            }
        }
    }
};
